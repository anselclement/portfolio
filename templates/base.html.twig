<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block title %}Bienvenue{% endblock %}</title>
        {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
            <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <header>
            <nav class="navbar is-primary is-fixed-top" role="navigation" aria-label="main navigation">
                <div class="container">
                    <div class="navbar-brand">
                        <h1 class="title is-2"><a href="#" class="navbar-item" id="logo">Clément Ansel</a></h1>
                        <span class="navbar-burger burger" data-target="navMenu">
                            <span></span>
                            <span></span>
                            <span></span>
                        </span>
                    </div>
                    <div id="navMenu" class="navbar-menu">
                        <div class="navbar-end">
                            <a href="#" class="navbar-item">
                                <i class="fas fa-home"></i>
                            </a>
                            <a href="#" class="navbar-item">A propos</a>
                            <a href="#" class="navbar-item">Compétences</a>
                            <a href="#" class="navbar-item">Expériences/Diplômes</a>
                            <a href="#" class="navbar-item">Portfolio</a>
                            <a href="#" class="navbar-item">Contact</a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <section id="intro"></section>
        <a class="button button-color">Primary</a>
        {% endblock %}
        {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
